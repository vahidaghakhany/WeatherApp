<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--TextViews-->
    <style name="TextView" >
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TextView.Medium" >
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="TextView.Small" >
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="TextView.XSmall" >
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>
    <style name="TextView.Large" >
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="TextView.XLarge" >
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <!--Separate Frame-->
    <style name="SepFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_blue_700</item>
    </style>

</resources>
